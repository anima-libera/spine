{
	"scopeName": "source.spine",
	"patterns": [
		{ "include": "#statement" }
	],
	"repository": {
		"statement": {
			"patterns": [
				{ "include": "#integer" },
				{ "include": "#keyword" },
				{ "include": "#semicolon" }
			]
		},
		"keyword": {
			"match": "\\`\\w+",
			"name": "keyword.spine"
		},
		"integer": {
			"match": "\\d",
			"name": "constant.numeric.spine"
		},
		"semicolon": {
			"match": "\\;",
			"name": "punctuation.semi.spine"
		}
	}
}
