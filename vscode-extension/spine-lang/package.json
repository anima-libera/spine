{
	"name": "spine-lang",
	"displayName": "Spine Programming Language",
	"description": "Spine programming language support",
	"repository": {
		"type": "git",
		"url": "git@github.com:anima-libera/spine.git"
	},
	"license": "(Apache-2.0 OR MIT)",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.100.0"
	},
	"dependencies": {
		"vscode-languageclient": "^9.0.1"
	},
	"categories": [
		"Programming Languages"
	],
	"icon": "./icons/spine.png",
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "spine-lang.fard",
				"title": "Fard",
				"category": "Spine",
				"icon": {
					"light": "./icons/spine.png",
					"dark": "./icons/spine.png"
				}
			}
		],
		"languages": [
			{
				"id": "spine",
				"extensions": [".spine", ".spn", ".sp"],
				"aliases": ["Spine", "sp"],
				"filenames": [],
				"configuration": "./language-configuration.json",
				"icon": {
					"light": "./icons/spine.png",
					"dark": "./icons/spine.png"
				}
			}
		],
		"grammars": [
			{
				"language": "spine",
				"scopeName": "source.spine",
				"path": "spine.tmGrammar.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.100.0",
		"@types/mocha": "^10.0.9",
		"@types/node": "20.x",
		"@typescript-eslint/eslint-plugin": "^8.53.0",
		"@typescript-eslint/parser": "^8.53.0",
		"eslint": "^9.39.2",
		"typescript": "^5.9.3",
		"@vscode/test-cli": "^0.0.12",
		"@vscode/test-electron": "^2.5.2"
	}
}
