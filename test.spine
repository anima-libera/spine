-- Hello world!!
ps "Hello, World!\n";

{
	-- All of these print `a`, they all demonstrate different literal syntaxes.
	pc 'a';        -- character
	pc '\x61';     -- character escape with two-hexadecimal-digits ASCII code
	pc '\u{61}';   -- character escape with hexadecimal Unicode scalar value
	pc '\d{97}';   -- character escape with decimal Unicode scalar value
	pc 97;         -- decimal
	pc 0x61;       -- hexadecimal
	pc 0b01100001; -- binary
	pc 0r{8}141;   -- arbitrary radix (here 8, so octal)
	pc 0r{36}2p;   -- arbitrary radix (here 36, so 0-9 and a-z are digits)

	pc '\n';
}

-- Can do this too!
pc pc pc pc 'o' 'w' 'o' '\n';

-- Addition!
ps "a + 1 is ";
pc add 'a' 1;
pc '\n';

-- Manual syscall!
di di sys 0 0 0 8 cpi di "syscall\n" 1 1;
-- last `1` is syscall number for the write syscall
-- second last `1` is the file descriptor for stdout
-- `cpi di "syscall\n"` pushes just the pointer of the string (len is discarded) as a number
-- `8` is the string length
-- syscalls can take up to 6 parameters (not counting syscall number), the unused ones are given 0s
-- sys pushes 2 values which we both discard

-- Empty statement, very useful >w<
;

