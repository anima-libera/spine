-- Hello world!!
kwps "Hello, World!\n";

{
	-- All of these print `a`, they all demonstrate different literal syntaxes.
	kwpc 'a';        -- character
	kwpc '\x61';     -- character escape with two-hexadecimal-digits ASCII code
	kwpc '\u{61}';   -- character escape with hexadecimal Unicode scalar value
	kwpc '\d{97}';   -- character escape with decimal Unicode scalar value
	kwpc 97;         -- decimal
	kwpc 0x61;       -- hexadecimal
	kwpc 0b01100001; -- binary
	kwpc 0r{8}141;   -- arbitrary radix (here 8, so octal)
	kwpc 0r{36}2p;   -- arbitrary radix (here 36, so 0-9 and a-z are digits)

	kwpc '\n';
}

-- Can do this too!
kwpc kwpc kwpc kwpc 'o' 'w' 'o' '\n';

-- Addition!
kwps "a + 1 is ";
kwpc kwadd 'a' 1;
kwpc '\n';

-- Manual syscall!
kwdi kwdi kwsys 0 0 0 8 kwcpi kwdi "syscall\n" 1 1;
-- last `1` is syscall number for the write syscall
-- second last `1` is the file descriptor for stdout
-- `kwcpi kwdi "syscall\n"` pushes just the pointer of the string (len is discarded) as a number
-- `8` is the string length
-- syscalls can take up to 6 parameters (not counting syscall number), the unused ones are given 0s
-- kwsys pushes 2 values which we both discard

-- Empty statement, very useful >w<
;

